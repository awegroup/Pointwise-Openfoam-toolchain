FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    p
    {
        solver          GAMG;
		smoother        DICGaussSeidel; //GaussSeidel;
        tolerance       1e-10;
        relTol          0.01;
        minIter         1;
    }

    pFinal
    {
        $p;
        relTol          0;
    }

    "(U|k|omega)"
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-15;
        relTol          0.01;
        maxIter         10;
        minIter         1;
    }

    UFinal
    {
        $U;
        relTol          0;
    }

    kFinal
    {
        $k;
        relTol          0;
    }

    omegaFinal
    {
        $omega;
        relTol          0;
    }
}


PIMPLE
{
    //momentumPredictor on;
    nOuterCorrectors 50;     // total iterations
    nCorrectors 2;      // f(v,p) correct the pressure field
    nNonOrthogonalCorrectors 1;     //also individual iterations
    //pRefCell 0;
    //pRefValue 0;
}





relaxationFactors
{
    fields
    {
        p      0.3;
        pFinal   1;
    }
    equations
    {
        "U|k|epsilon"     0.3;
        "(U|k|epsilon)Final"   1;
    }
}



